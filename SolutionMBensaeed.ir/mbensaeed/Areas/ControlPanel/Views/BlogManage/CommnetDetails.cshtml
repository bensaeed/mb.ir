                                            <th class="sorting" tabindex="0" aria-controls="myTable" rowspan="1" colspan="1" style="width: 117.717px;" aria-label="شناسه پست: activate to sort column ascending">شناسه پست</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ foreach (var item in ListCommnet)
                                            {
                                                var StrDateTime = @item.SendDate + "-" + @item.SendTime;
                                                <tr role="row" class="odd">
