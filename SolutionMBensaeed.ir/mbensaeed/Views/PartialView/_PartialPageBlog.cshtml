@using mbensaeed.Helper
@{
    DatabaseOperation _dop = new DatabaseOperation();
    _dop.SaveLog();
    var ListPost = _dop.GetAllPost("3");
}
@{ if (ListPost.Count() > 0)
    {
        <section class="section-padding" id="blog">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="section-header">
                            <h2 class="section-title">وبلاگ</h2>
                            <p>
                                <!-- توضيحات -->
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @{
                        if (ListPost.Count() == 1)
                        {
                            <div class="col-md-4"></div>
                            <div class="col-md-4"></div>
                        }
                        else if (ListPost.Count() == 2)
                        {
                            <div class="col-md-4"></div>
                        }
                    }
                    @{ foreach (var item in ListPost)
                        {
                            <div class="col-md-4">
                                <!-- Single Blog Post -->
                                <div class="single-blog-post">
                                    <!-- Blog Box Background -->
                                    <style>
                                        .blog-box-bg-Curr-@item.PostID {
                                           background-image: url("@item.ImageUrl");
                                        }
                                    </style>
                                    <div class="blog-box-bg blog-box-bg-Curr-@item.PostID">
                                        @*<img src="@Url.Content(item.ImageUrl)" alt="" style="height:310px;width:290px" />*@
                                    </div>
                                    <!-- Blog Content Box -->
                                    <div class="blog-content-box">
                                        <div class="blog-meta">
                                            <p>انتشار @DateConvertor.NumberToDate(@item.PostDate) <a href="#">محمد بن سعيد</a></p>
                                            <span><a href="#"><i class="fas fa-eye"></i> @item.ViewCount</a></span>
                                            @*<span><a href="#"><i class="fas fa-comments"></i> ۱۹</a></span>*@
                                            <span><a href="#"><i class="fas fa-heart"></i> @item.LikeCount</a></span>
                                        </div>
                                        <div class="blog-content">
                                            <h5>
                                                @item.Title
                                            </h5>
                                            <p>
                                                @item.Content
                                            </p>
                                            <a class="blog-btn" href="@Url.Action("ContentDetail", "Blog" ,new { PostID =item.PostID })">ادامه مطلب<i class="fas fa-long-arrow-alt-left"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
                <br /> <br /><br />
                <a class="blog-btn pull-left" href="@Url.Action("Index","Blog")"> ليست آخرين مطالب وبلاگ<i class="fas fa-long-arrow-alt-left"></i></a>
            </div>
        </section>
    } }

@section scripts{
    <script type="text/javascript">
   
    </script>
}