<!DOCTYPE html>
<html lang="fa-IR" dir="rtl" class="no-js" prefix="og: http://ogp.me/ns#">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div id="homeSectionID"></div>
    <!-- Pre-loader Start -->
    <div class="elegant-preeloader">
        <div class="preloader-spinner"></div>
    </div>
    <!-- Pre-loader End -->
    <!-- Header Start -->
    <header>
        <!-- Menu Bars -->
        <div class="menu-bars">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <!-- Nav Start -->
        <nav class="navigation">
            <div class="navigation-inner">
                <ul class="main-menu nav navbar-nav">
                    <li class="smooth-scroll active"><a href="#homeSectionID" >خانه</a></li>
                    <li class="smooth-scroll"><a href="#aboutSectionID">درباره من</a></li>
                    <li class="smooth-scroll"><a href="#experiencesSectionID">تجربیات</a></li>
                    <li class="smooth-scroll"><a href="#servicesSectionID" onclick="ScrollIntoDivByID('servicesSectionID')">خدمات</a></li>
                    <li class="smooth-scroll"><a href="#portfolioSectionID">نمونه کار</a></li>
                    @*<li class="smooth-scroll"><a href="#testimonialSectionID">دیدگاه ها</a></li>*@
                    <li class="smooth-scroll"><a href="#blogSectionID">وبلاگ</a></li>
                    <li class="smooth-scroll"><a href="@Url.Action("Contact_US","Home")">تماس با من</a></li>
                    @*<li class="smooth-scroll"><a href="#contactSectionID">تماس با من</a></li>*@
                    @*<li class="smooth-scroll"><a href="@Url.Action("Register","Account")">ثبت نام در سيستم</a></li>*@
                    <li class="smooth-scroll"><a href="@Url.Action("Login","Account")">ورود به سيستم</a></li>
                </ul>
            </div>
        </nav>
    <!-- Start Hero Area -->
    <div class="hero-area">
        @Html.Partial("~/Views/PartialView/_PartialPageHeroArea.cshtml")
    </div>
    </header>
    <!-- Header End -->
    @RenderBody()
    <!-- Contact Start -->
    @Html.Partial("~/Views/PartialView/_PartialPageContact.cshtml")
    <!-- Contact End -->
    <!-- The ScrollToTop Start -->
    <div class="ScrollToTop" style="display: none;">
        <a href="#"><i class="fas fa-angle-up fa-lg"></i></a>
    </div>
    <!-- The ScrollToTop end -->
    <!-- Footer Start-->
    @Html.Partial("~/Views/PartialView/_PartialPageFooter.cshtml")
    <!-- Footer End -->


    @Scripts.Render("~/bundles/js")

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $('body').persiaNumber();
        });

        function ScrollIntoDivByID(IdOfElement) {
            alert(IdOfElement);
            if (document.getElementById(IdOfElement) == null) {
                alert("false");
                window.location.href='@Url.Action("index", "home")';
            } else {
                alert("true");
                document.getElementById(IdOfElement).scrollIntoView({ behavior: "smooth" });
            } 
        }
    </script>
</body>
</html>
